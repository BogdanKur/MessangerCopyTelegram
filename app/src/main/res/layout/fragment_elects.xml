<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grafitnoCherni"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ChatUserFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@color/grafitnoGray"
        app:subtitleTextColor="@color/white">
        <ImageButton
            android:id="@+id/imgBtnProfilePicture"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@android:color/transparent"
            android:layout_marginStart="40dp"
            android:src="@drawable/icon_elect_fragment"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:paddingStart="10dp"
            android:text="Избранное"/>
    </com.google.android.material.appbar.MaterialToolbar>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMessage"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/grafitnoGray">
        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="start|center"
            android:background="@android:color/transparent"
            android:src="@drawable/icon_choose_emogi"/>
        <EditText
            android:id="@+id/etTextMessage"
            android:textColorHint="@color/startsTextColor"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:gravity="center|start"
            android:layout_gravity="center|start"
            android:hint="Сообщение"/>
        <ImageButton
            android:id="@+id/imgBtnSendMessage"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="end|center"
            android:layout_marginEnd="15dp"
            android:background="@android:color/transparent"
            android:src="@drawable/icon_send_message"/>
    </FrameLayout>

</LinearLayout>